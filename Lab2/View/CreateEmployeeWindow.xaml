<Window x:Class="Lab2.View.CreateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2.View"
        mc:Ignorable="d"
        Title="Create Employee" Height="400" Width="500">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Name:" Grid.Row="0" Margin="5, 10, 5, 5"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Margin="5"/>

        <TextBlock Text="Year of employment:" Grid.Row="2" Margin="5, 10, 5, 5"/>
        <TextBox x:Name="YearBox" Grid.Row="3" Margin="5"/>

        <TextBlock Text="Skill level:" Grid.Row="4" Margin="5, 10, 5, 5"/>
        <TextBox x:Name="SkillBox" Grid.Row="5" Margin="5"/>

        <TextBlock Text="Status:" Grid.Row="4" Margin="5, 10, 5, 5"/>
        <TextBox x:Name="StatusBox" Grid.Row="5" Margin="5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="40">
            <Button Content="Create" Click="Create_Click" Margin="10, 0, 10, 0"/>
            <Button Content="Autofill" Click="Autofill_Click" Margin="10, 0, 10, 0"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="10, 0, 10, 0"/>
        </StackPanel>
    </StackPanel>
</Window>
